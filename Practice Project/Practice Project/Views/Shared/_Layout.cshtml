

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] -YAMS </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/startbootstrap-simple-sidebar@5.1.2/css/simple-sidebar.css" />
    <style>
        footer {
            position: fixed;            
            bottom: 0;
            width: 100%;
            background-color: #737CA1;
            color:black;
        }
        header {
            position: fixed;
            top: 0;
            width: 100%;
            height:15%;
            background-color: #737CA1;
            color: black;
        }
        .nav-item:hover{
            background-color:#0094ff;
            color:#fff;
        }
        .nav-item .active {
            background-color: #0094ff;
            color: #fff;
        }
        
        
    </style>
</head>

<body>

    <div class="d-flex" id="wrapper">
        <div class="sidebar" >
            <!-- Sidebar -->
            <div class="bg-light border-right" id="sidebar-wrapper"
                 style=" align-content:center; text-align:center; ">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="~/images/ycc-logo.png" width="200" height="100" />
                </a>

                @*<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>*@

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Attendees" asp-action="Index">Attendees</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Lists</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Evaluations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Members" asp-action="Index">Members</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Badges" asp-action="Index">Badges</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Checklists</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Reports</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Sponsors" asp-action="Index">Sponsors</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Sessions" asp-action="Index">Sessions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ConferenceSetup" asp-action="Index">Conference Setup</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Client" asp-action="Index">Customer Setup</a>
                        </li>


                    </ul>
                </div>
            </div>
        </div>
        
        <div id="page-content-wrapper">
            
            <header>
                <button style="position: fixed; right: 0; top: 0; color: #fff; background-color: #737CA1; border:hidden"
                        asp-controller=" Home" asp-action="Index">
                    LOG OUT
                </button>


                


                

            </header>
            

                <div class="container-fluid"
                     style="margin-top:90px">
                    <main>
                        @RenderBody()

                    </main>
                    
                </div>

           
                <footer class="border-top footer ">
                    <h6 style="color:#fff;"> &copy; 2022 YCC All Rights Reserved </h6>
                </footer>
            
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>